.form
  width: 88.13%
  margin-center()

  font-size: 12px
  line-height: 120%
  letter-spacing: 0.0025em

.form__title
  padding-top: 16px

  font-weight: 800
  font-size: 18px
  line-height: 120%
  letter-spacing: 0.0025em
  text-align: center

.form__item:not(:nth-child(2)) .form__item-title
  visually-hidden()

.form__item
  padding-bottom: 16px

  &--config
    padding-bottom: 2px

.form__item-title
  padding-bottom: 5px

  font-weight: 400
  font-size: 14px
  line-height: 120%
  letter-spacing: 0.0025em


.form__group-wrapper
  padding: 15px 14px

  border: 1px solid font-gray
  border-radius: 7px

.form__group
  margin: 0
  padding: 0

  border: none

  &--config
    min-height: auto
    padding-top: 10px
    padding-right: 10px

.form__group-title
  padding-top: 3px
  padding-bottom: 2px
  font-weight: 800
  font-size: 12px
  line-height: 120%
  letter-spacing: 0.0025em

.form__item-text
  min-height: 25px

  &--gpu
    display: none

.form__item-text br
  display: none

.form__item-price
  padding-top: 5px

  font-weight: 800

  &--text
    display inline
    padding-bottom: 5px

.form__config-item
  display: flex
  justify-content: space-between
  align-items: center

  &--slider
    padding-bottom: 28px

  &--checkbox
    position relative

.form__config-label
  cursor pointer

  &--slider
    align-self: flex-start
    padding-top: 7px

  &--checkbox
    width: 100%
    padding-top: 1px
    padding-left: 28px
    min-height: 39px

.form__icon-checkbox
  position: absolute
  content: ""
  top: 0
  left: 1px
  z-index -1

  fill: font-black

  &--checked
    display: none

.form__config-ckeckbox
  &:checked ~ .form__icon-checkbox--checked
    display: block
    fill: #0971F5

  &:disabled ~ .form__icon-checkbox
    fill: font-disable

.form__config-input,
.form__config-ckeckbox
  visually-hidden()

@media(min-width: tablet-width)
  .form
    width: 92.18%
    padding-bottom: 28px

  .form__title
    font-size: 26px
    padding-bottom: 13px

  .form__item
    &--config
      padding-bottom: 0

  .form__item-title
    font-size: 18px
    margin-bottom: 0
    padding-bottom: 22px

  .form__group-wrapper
    padding: 24px 10px
    padding-bottom: 12px

  .form__group
    display: flex

  .form__group-title
    padding-bottom: 3px

    font-size: 16px

  .form__group-container
    display: flex
    justify-content: space-between

  .form__text-wrapper
    display: flex
    align-items: baseline
    flex-grow: 1

  .form__item-text
    width: 130px

    font-size: 16px
    line-height: 120%

    &:not(:first-child)
      width 145px
      font-size: 14px
      padding-right: 15px

      text-align: center

  .form__item-text br
    display block

  .fotm__price-container
    display: flex
    flex-direction: column
    align-items: center

    width: 100px
    padding: 4px 15px

  .form__item-price
    margin: 0
    padding-bottom: 7px

    text-align: center
    font-size: 14px
    line-height: 120%
    letter-spacing: 0.0025em

  .form__config-list
    display: flex
    padding-right: 15px

  .form__config-item
    &--checkbox
      margin-left: 45px
      padding-top: 2px

      align-items: flex-start

    &--slider
      width: 47.9%
      margin-right: auto

  .form__config-label
    &--checkbox
      min-width: 70px

      font-size: 16px

    &--slider
      font-size: 18px

  .form__icon-checkbox
    top: 2px
    left: 2px

@media(min-width: desktop-width)
  .form
    width: 75%
    padding-bottom: 50px

  .form__title
    font-size: 32px
    margin: 0
    padding-top: 28px
    padding-bottom: 50px

  .form__item:not(.form__item--config)
    padding-bottom: 13px


  .form__config-list
    justify-content: space-between
    align-items: center
    padding-right: 25px

  .form__config-item--slider
    width: 37.4%
    margin-right: 0

  .form__config-label--checkbox
    min-height: 55px
    padding-left: 34px
    padding-right: 15px

  .form__item-title
    padding-top: 20px
    padding-bottom: 31px

  .form__group-wrapper
    padding: 22px 12px
    padding-bottom: 13px

  .form__group-title
    font-size: 14px

  .form__item-text
    width: 170px
    font-size: 14px
    padding-right: 60px

    &:not(:first-child)
      width: 180px

  .fotm__price-container
    width: 130px
    padding: 5px

  .form__item-price
    padding-top: 10px
    padding-bottom: 13px
    text-align: right
