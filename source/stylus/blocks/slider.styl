.slider
  position: relative

  width: 204px
  height: 40px

  &::before
    position: absolute
    content: ""
    top: 38%
    left: 0
    transform: translateY(-50%)

    width 100%
    height 2px

    background-color: #E5E5E5
    border-radius: 3px

.slider__line
  position: absolute
  content: ""
  top: 38%
  left: 0
  transform: translateY(-50%)

  width 50%
  height 2px

  background-color: background-blue
  border-radius: 3px

.slider__point
  position: absolute
  content: ""
  top: 30%
  left: 100%
  transform: translate(-50%,-50%)

  width: 26px
  height 26px

  cursor: pointer

  &::after
    position absolute
    content: ""
    width: 12px
    height: 12px

    top: 13px
    left: 12px
    transform: translate(-50%, -50%)

    background: white

    border-radius: 50%
    box-shadow: 0px 1px 3px rgba(0, 0, 0, 0.18)

  &:active::after
    width: 15px
    height: 15px

.slider__text
  position: absolute
  content: ""

  top: 8px

  color: font-disable

  &--center
    top: 15px
    left: 50%
    transform: translateX(-55%)

    color font-black

  &--right
    right 0

@media(min-width: tablet-width)
  .slider
    width: 246px

  .slider__text--center
    font-size: 14px
