.page-footer
  padding-top: 5px

.page-footer__container
  margin: auto
  padding-top: 22px
  padding-left: 17px
  padding-right: 20px
  padding-bottom: 10px

  box-shadow: 0px -1px 5px rgba(0, 0, 0, 0.1)

.page-footer__list
  display: flex
  justify-content: space-between

.page-footer__logo-link
  padding-left: 3px

.page-footer__item--links-block
  padding-left: 28px

.page-footer__links-list
  display: flex
  flex-wrap: wrap
  justify-content: space-between

  max-width 440px

.page-footer__link-item
  width 89px

.page-footer__link
  display: block

  min-height: 27px

  font-museo()
  font-size: 12px
  line-height: 120%
  letter-spacing: 0.0275em
  color: font-gray

  &:hover,
  &:focus
    color: font-hover

  &:active
    color: font-black
