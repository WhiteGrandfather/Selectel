.page-footer
  padding-top: 5px

.page-footer__shadow
  box-shadow: 0px -1px 5px rgba(0, 0, 0, 0.1)

.page-footer__container
  margin: auto
  padding-top: 22px
  padding-left: 17px
  padding-right: 20px
  padding-bottom: 10px

.page-footer__list
  display: flex
  justify-content: space-between

.page-footer__logo
  padding-left: 3px

.page-footer__item--links-block
  padding-left: 28px

.page-footer__links-list
  display: flex
  flex-wrap: wrap
  justify-content: space-between

  max-width 440px

.page-footer__link-item
  width 89px

.page-footer__link
  display: block

  min-height: 27px

  font-museo()
  font-size: 12px
  line-height: 120%
  letter-spacing: 0.0275em
  color: font-gray

  &:hover,
  &:focus
    color: font-hover

  &:active
    color: font-black


@media(min-width: tablet-width)
  .page-footer__container
    width: 92.25%
    padding: 0
    padding-top: 30px

  .page-footer__item--logo-block
    padding-top: 2px

  .page-footer__logo
    padding: 0

  .page-footer__links-list
    max-width: 560px

  .page-footer__link-item
    width: 118px
    padding-bottom: 7px

    order: 100

    &:nth-child(1)
      order: 0

    &:nth-child(7)
      order: 1

    &:nth-child(4)
      order: 2

    &:nth-child(2)
      order: 3

    &:nth-child(5)
      order: 4

    &:nth-child(3)
      order: 5

    &:nth-child(8)
      order: 6

@media(min-width: desktop-width)
  .page-footer__container
    max-width: 892px
    padding-top: 38px

  .page-footer__links-list
    max-width: 700px

  .page-footer__link-item
    width: 142px
    padding-bottom: 14px

  .page-footer__link
    font-size: 14px

