visually-hidden()
  position: absolute

  width: 1px
  height: 1px
  margin: -1px
  border: 0
  padding: 0

  white-space: nowrap

  clip-path: inset(100%)
  clip: rect(0 0 0 0)
  overflow: hidden

font-gotham()
  font-family: "Gotham Pro", "Arial", sans-serif

font-museo()
  font-family: "Museo Sans Cyrl", "Arial", sans-serif

margin-center()
  margin-left: auto
  margin-right: auto

list-style()
  margin: 0
  padding: 0

  list-style: none
